    
    <div class="movie-card">
        <div class="movie-card__poster">
            {{#if poster_path}}
            <img src="//image.tmdb.org/t/p/w400{{poster_path}}" alt="{{title}}">
            {{else}}
            <img class="movie-card__no-image" src="https://www.ncenet.com/wp-content/uploads/2020/04/no-image-png-2.png">      
            {{/if}}
        </div>
        <div class="movie-card__info">
            <h2 class="movie-card__title">{{title}} </h2>

            <div class="movie-card__rait">
                <div class="movie-card__categories">
                    <p class="movie-card__votes">Vote / Votes</p>
                    <p class="movie-card__popularity">Popularity</p>
                    <p class="movie-card__origin-title">Original Title</p>
                    <p class="movie-card__genres">Genre</p>
                </div>
           
                <div class="movie-card__raits">
                    <p class="movie-card__votes-rait"><span>{{vote_average}}</span><span>/</span><span>{{vote_count
                        }}</span></p>
                    <p class="movie-card__popularity">{{popularity}}</p>
                    <p class="movie-card__origin-title-rait">{{original_title}}</p>
                    <p class="movie-card__genres">{{#if genres}}
                    {{genres}}
                    {{/if}}</p>
                </div>
            </div>

            <article class="movie-card__descript">
                <h3 class="movie-card__descript-title">About</h3>
                {{#if overview}}
                <p class="movie-card__text">{{overview}}</p>
                {{else}}
                <p class="movie-card__text">Цфеср for yourself</p>
                {{/if}}
            </article>
            <div class="movie-card__controls">
                <button class="movie-card__btn movie-card__btn--watched">add to Watched</button>
                <button class="movie-card__btn movie-card__btn--queue">add to queue</button>
            </div>
        </div>
    </div>

